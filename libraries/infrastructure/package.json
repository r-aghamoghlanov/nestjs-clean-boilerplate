{
  "name": "@package/infrastructure",
  "version": "1.0.0",
  "description": "Infrastructure layer for the application",
  "exports": {
    "./cache/*": {
      "types": "./src/cache/*.ts",
      "default": "./dist/cache/*.js"
    },
    "./config/*": {
      "types": "./src/config/*.ts",
      "default": "./dist/config/*.js"
    },
    "./database/*": {
      "types": "./src/database/*.ts",
      "default": "./dist/database/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "Rustam Aghamoghlanov",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "publishConfig": {
    "access": "restricted"
  },
  "dependencies": {
    "pino": "^9.9.0",
    "zod": "^3.25.76",
    "@package/core": "workspace:*"
  },
  "peerDependencies": {
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "typescript": "~5.9.2"
  }
}
