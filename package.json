{
  "name": "clean-architecture-monorepo-boilerplate",
  "version": "1.0.0",
  "description": "Clean Architecture Monorepo Boilerplate",
  "author": "Rustam Aghamoghlanov",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:api": "pnpm --filter api build",
    "start:api": "pnpm --filter api start",
    "start:api:dev": "pnpm --filter api start:dev",
    "start:api:debug": "pnpm --filter api start:debug",
    "start:api:prod": "pnpm --filter api start:prod",
    "test:api": "pnpm --filter api test",
    "test:api:watch": "pnpm --filter api test:watch",
    "test:api:cov": "pnpm --filter api test:cov",
    "test:api:debug": "pnpm --filter api test:debug",
    "test:api:e2e": "pnpm --filter api test:e2e",
    "lint:api": "pnpm --filter api lint",
    "start:ui:dev": "pnpm --filter ui start:dev",
    "dev:pnpm": "pnpm run --parallel --filter \"./apps/**\" start:dev",
    "build:pnpm": "pnpm run --recursive --filter \"./apps/**\" build",
    "test:pnpm": "pnpm run --recursive --filter \"./apps/**\" start:test",
    "lint:pnpm": "pnpm run --recursive --filter \"./apps/**\" start:lint",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "dev": "turbo dev",
    "prod": "turbo prod",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@10.15.1"
}
