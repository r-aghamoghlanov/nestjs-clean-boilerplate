{
  "name": "clean-architecture-boilerplate",
  "version": "0.0.1",
  "description": "Clean Architecture with NestJS as a main framework",
  "author": "Rustam Aghamoghlanov",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:api": "pnpm --filter api build",
    "start:api": "pnpm --filter api start",
    "start:api:dev": "pnpm --filter api start:dev",
    "start:api:debug": "pnpm --filter api start:debug",
    "start:api:prod": "pnpm --filter api start:prod",
    "test:api": "pnpm --filter api test",
    "test:api:watch": "pnpm --filter api test:watch",
    "test:api:cov": "pnpm --filter api test:cov",
    "test:api:debug": "pnpm --filter api test:debug",
    "test:api:e2e": "pnpm --filter api test:e2e",
    "lint:api": "pnpm --filter api lint",
    "start:ui:dev": "pnpm --filter ui start:dev",
    "dev": "pnpm run --parallel --filter \"./apps/**\" start:dev",
    "build": "pnpm run --recursive --filter \"./apps/**\" build",
    "test": "pnpm run --recursive --filter \"./apps/**\" start:test",
    "lint": "pnpm run --recursive --filter \"./apps/**\" start:lint"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "pnpm@10.15.0"
}