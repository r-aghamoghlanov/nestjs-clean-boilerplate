{
  "name": "@package/infrastructure",
  "version": "1.0.0",
  "description": "Infrastructure layer for the application",
  "exports": {
    "./cache/*": {
      "types": "./src/cache/*.ts",
      "default": "./dist/cache/*.js"
    },
    "./config/*": {
      "types": "./src/config/*.ts",
      "default": "./dist/config/*.js"
    },
    "./database/*": {
      "types": "./src/database/*.ts",
      "default": "./dist/database/*.js"
    },
    "./logger/*": {
      "types": "./src/logger/*.ts",
      "default": "./dist/logger/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "typeorm": "npm run build && npx typeorm -d dist/database/typeorm/datasource/datasource.js",
    "db:setup": "dropdb clean-architecture-boilerplate; createdb clean-architecture-boilerplate",
    "db:migration:generate": "npm run typeorm -- migration:generate src/database/typeorm/migrations/$npm_config_name-migration",
    "db:migration:create": "npm run typeorm -- migration:create src/database/typeorm/migrations/$npm_config_name-migration",
    "db:migration:revert": "npm run typeorm -- migration:revert",
    "db:migration:run": "npm run typeorm -- migration:run"
  },
  "scriptDescriptions": {
    "build": "Build the project",
    "dev": "Build the project in watch mode",
    "test": "Run tests",
    "test:watch": "Run tests in watch mode",
    "lint": "Lint the project",
    "clean": "Delete dist folder",
    "typeorm": "Run typeorm",
    "db:setup": "Drops and creates development database",
    "db:migration:generate": "Generate a new migration based on the state of the models (e.g. npm run db:migration:generate --name=user)",
    "db:migration:create": "Create a new empty migration (e.g. npm run db:migration:create --name=user)",
    "db:migration:revert": "Revert the last migration",
    "db:migration:run": "Run all pending migrations"
  },
  "keywords": [],
  "author": "Rustam Aghamoghlanov",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "publishConfig": {
    "access": "restricted"
  },
  "dependencies": {
    "@backend/core": "workspace:*",
    "dotenv": "^17.2.1",
    "pino": "^9.9.0",
    "redis": "^4.7.1",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "eslint": "^9.34.0",
    "@types/node": "^22.10.7",
    "@package/typescript-config": "workspace:*",
    "@package/eslint-config": "workspace:*"
  }
}
